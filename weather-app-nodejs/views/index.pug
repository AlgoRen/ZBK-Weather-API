extends layout

block content
  .container
    h1 Welcome to #{title}
    p
      | Official ZBK API Weather Forecast Tool using ClimaCell API
    br
    br
    .row
      .col-md-6
        form.form-inline(method="post", action="weather")
          .form-group
            label.sr-only(for="inputEmail") City Name 
            label.form-control( name="city" type="text" placeholder="Enter City Name" required="required")
          |
          button.btn.btn-primary(type="submit") Fetch Weather
        hr
    .row 
      .col-md-12
        p
          br
          br
          strong Weather Forecase #{forecast} 
        table.table 
          thead
            tr
              th Longitude / Latitude 

              th Pressure
              th Temprature
              th Humidity
          tbody
            if body
              tr
                td
                  #{body.coord.lon} / #{body.coord.lat} 
                td 
                  #{body.main.pressure}
                td 
                  #{body.main.temp}
                td 
                  #{body.main.humidity}
            else 
              tr 
                td(colspan="6") 
                | Enter city name and click Fetch Weather
    button